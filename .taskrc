data.location=~/.task
news.version=3.4.1

# To use the default location of the XDG directories,
# move this configuration file from ~/.taskrc to ~/.config/task/taskrc and update location config as follows:

#data.location=~/.local/share/task
#hooks.location=~/.config/task/hooks

# Add custom high-urgency tags
urgency.user.tag.urgent.coefficient=10.0
urgency.user.tag.critical.coefficient=15.0

# Color theme (uncomment one to use)
#include light-16.theme
#include light-256.theme
#include bubblegum-256.theme
#include dark-16.theme
#include dark-256.theme
#include dark-red-256.theme
#include dark-green-256.theme
#include dark-blue-256.theme
#include dark-violets-256.theme
#include dark-yellow-green.theme
#include dark-gray-256.theme
#include dark-gray-blue-256.theme
#include solarized-dark-256.theme
#include solarized-light-256.theme
#include no-color.theme
#include ~/config/rose-pine-taskwarrior/rose-pine-moon-16.theme
#include ~/config/rose-pine-taskwarrior/rose-pine-moon-256.theme
#include ~/config/rose-pine-taskwarrior/rose-pine-16.theme
#include ~/config/rose-pine-taskwarrior/rose-pine-256.theme
include ~/.task/current-theme.theme

urgency.user.tag.later.coefficient=-6.0
report.list.filter=status:pending or +WAITING
report.list.labels=ID,Active,Age,D,P,Project,Tags,R,Sch,Wait,Due,Until,Description,Urg
report.list.columns=id,start.age,entry.age,depends.indicator,priority,project,tags,recur.indicator,scheduled.countdown,wait.countdown,due,until.remaining,description.count,urgency
uda.reviewed.type=date
uda.reviewed.label=Reviewed
report._reviewed.description=Tasksh review report.  Adjust the filter to your needs.
report._reviewed.columns=uuid
report._reviewed.sort=reviewed+,modified+
report._reviewed.filter=( reviewed.none: or reviewed.before:now-6days ) and ( +PENDING or +WAITING )
